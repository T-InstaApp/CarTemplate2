<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/bottom_left_curve.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the background color to white (#FFFFFF) -->
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" /> <!-- Adjust the value to control the curvature -->
        </shape>
    </item>

    <!-- Border -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/teal" /> <!-- Set the border color to red (#FF0000) and adjust the width (2dp) -->
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" /> <!-- Make sure the corner radius matches the background shape -->
        </shape>
    </item>
</layer-list>

